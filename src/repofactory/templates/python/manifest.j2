[project]
name = "{{ name.replace('-', '_') }}"
version = "0.1.0"
description = "{{ type }} template"
requires-python = ">=3.11"
readme = "README.md"
license = {text = "MIT"}
authors = [{name = "{{ name }} maintainer"}]

[project.optional-dependencies]
dev = ["pytest", "ruff", "black"]

[tool.ruff]
line-length = 100

[tool.black]
line-length = 100
